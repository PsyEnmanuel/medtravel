    <style>
      * {
        font-family: "Arial", serif;
        box-sizing: border-box;
        line-height: 1.2;
        -webkit-print-color-adjust: exact;
      }

      body,
      html {
        margin: 0;
        position: relative;
        padding: 0 30px;
        font-size: 16px;
        color: #333;
        text-transform: uppercase;
      }

      h1,
      h2,
      span,
      p {
        margin: 0;
        padding: 0;
        line-height: 1.5;
      }

      tr,
      td,
      th,
      p {
        page-break-inside: avoid;
      }

      p {
        white-space: pre-wrap;
      }

      .mb-10 {
        margin-bottom: 10px;
      }

      th,
      td {
        padding: 8px;
        width: 50%;
        vertical-align: top;
      }
    </style>
  </head>
  <body>
    <div>
      <div
        style="
          text-transform: uppercase;
          font-size: 20px;
          margin-bottom: 24px;
          margin-top: 20px;
