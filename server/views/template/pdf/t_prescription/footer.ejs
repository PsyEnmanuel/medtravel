<style>
  * {
    font-family: "Arial", serif;
    box-sizing: border-box;
    -webkit-print-color-adjust: exact;
  }

  body,
  html {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    position: relative;
    font-size: 14px;
    color: #333;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  span,
  p {
    margin: 0;
    padding: 0;
    line-height: 1.3;
  }
  .footer {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin: 30px 60px 100px;
  }
  .footer-top {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin-bottom: 20px;
  }
  .footer-logo {
    height: 120px;
    width: auto;
    object-fit: contain;
  }
  .footer-bottom {
    display: flex;
  }
  .footer-bottom b {
    width: 90px;
    display: inline-block;
  }
  .background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position: center;
    background-size: contain;
  }
</style>
<body>
  <div class="footer">

    <div class="footer-bottom">
      <div style="display: flex; flex-direction: column; width: 100%">
        <span>
          <b>Nombre:</b>
          <span><%= data.insured_description %></span>
        </span>
        <% if(data.age) { %>
        <span>
          <b>Edad:</b>
          <span><%= data.age %></span>
        </span>
        <% } %> <% if(data.sex) { %>
        <span>
          <b>Sexo:</b>
          <span><%= data.sex %></span>
        </span>
        <% } %>
      </div>
      <div style="display: flex; flex-direction: column; width: 100%">
        <% if(data.ident_no) { %>
        <span>
          <b>Nº de ident.:</b>
          <span><%= data.ident_no %></span>
        </span>
        <% } %> <% if(data.diagnosis) { %>
        <span>
          <b>Diagnóstico:</b>
          <span><%= data.diagnosis %></span>
        </span>
        <% } %>
        <span>
          <b>Fecha:</b>
          <span><%= data.prescription_date_format %></span>
        </span>
      </div>
    </div>

    <div>
      <hr />
    </div>
  </div>
</body>
